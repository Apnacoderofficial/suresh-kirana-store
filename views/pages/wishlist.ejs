<%- include('../include/head') %>
<title>Wishlist - Suresh kirana store</title>
      <main>
         <!-- section-->
         <div class="mt-4">
            <div class="container">
               <!-- row -->
               <div class="row">
                  <!-- col -->
                  <div class="col-12">
                     <!-- breadcrumb -->
                     <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0">
                           <li class="breadcrumb-item"><a href="#!">Home</a></li>
                           <li class="breadcrumb-item"><a href="#!">Shop</a></li>
                           <li class="breadcrumb-item active" aria-current="page">My Wishlist</li>
                        </ol>
                     </nav>
                  </div>
               </div>
            </div>
         </div>
         <!-- section -->
         <section class="mt-8 mb-14">
            <div class="container">
               <!-- row -->
               <div class="row">
                  <div class="col-lg-12">
                     <div class="mb-8">
                        <!-- heading -->
                        <h1 class="mb-1">My Wishlist</h1>
                        <p>There are <%= pidCount %> products in this wishlist.</p>
                     </div>
                     <div>
                        <!-- table -->
                        <div class="table-responsive">
                           <table class="table text-nowrap table-with-checkbox">
                              <thead class="table-light">
                                 <tr>
                                    <th>
                                       <!-- form check -->
                                       <div class="form-check">
                                          <!-- input -->
                                          <input class="form-check-input" type="checkbox" value="" id="checkAll" />
                                          <!-- label -->
                                          <label class="form-check-label" for="checkAll"></label>
                                       </div>
                                    </th>
                                    <th></th>
                                    <th>Product</th>
                                    <th>Amount</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                    <th>Remove</th>
                                 </tr>
                              </thead>
                              <tbody>
                                 <% products.forEach(product => { %>
                                    <tr>
                                        <td class="align-middle">
                                            <!-- form check -->
                                            <div class="form-check">
                                                <!-- input -->
                                                <input class="form-check-input" type="checkbox" value="<%= product._id %>" id="chechbox<%= product._id %>" />
                                                <!-- label -->
                                                <label class="form-check-label" for="chechbox<%= product._id %>"></label>
                                            </div>
                                        </td>
                                        <td class="align-middle">
                                            <a href="#"><img src="../upload/<%= product.image %>" class="icon-shape icon-xxl" alt="<%= product.name %>" /></a>
                                        </td>
                                        <td class="align-middle">
                                            <div>
                                                <h5 class="fs-6 mb-0"><a href="#" class="text-inherit"><%= product.name %></a></h5>
                                                <small style="text-decoration: line-through;">₹ <%= product.price %></small>
                                            </div>
                                        </td>
                                        <td class="align-middle">₹ <%= product.discounted_price %></td>
                                        <td class="align-middle"><span class="badge bg-success"><%= product.availability?'In Stock':'Out Of Stock' %></span></td>
                                        <%= product.availability?'In Stock':'Out Of Stock' %>
                                        <td class="align-middle">
                                            <div class="btn <%= product.availability?'btn-primary':'btn-secondary' %> btn-sm"><%= product.availability?'Add to Cart':'Contact Us' %></div>
                                        </td>
                                          <!-- Other table cells for item details -->
                                          <td class="align-middle">
                                             <!-- Form for deleting item from wishlist -->
                                             <form action="/deleteFromWishlist" method="POST">
                                                 <!-- Hidden input field to send the product ID to the server -->
                                                 <input type="hidden" name="productId" value="<%= product._id %>">
                                                 <!-- Button to trigger the form submission -->
                                                 <button type="submit" class="text-muted bg-transparent" data-bs-toggle="tooltip" data-bs-placement="top" title="Delete">
                                                     <i class="feather-icon icon-trash-2"></i>
                                                 </button>
                                             </form>
                                         </td>
                                         
                                      
                                    </tr>
                                <% }); %>
                                
                              </tbody>
                           </table>
                        </div>
                     </div>
                  </div>
               </div>
            </div>
         </section>
      </main>

	  <%- include('../include/footer') %>