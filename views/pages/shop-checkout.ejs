								<div class="col-md-12 offset-xl-1 col-xl-4 col-lg-6">
									<div class="mt-4 mt-lg-0">
										<div class="card shadow-sm">
											<h5 class="px-6 py-4 bg-transparent mb-0">Order Details</h5>
											<ul class="list-group list-group-flush">
												<% cartProducts.forEach(product => { %>
												<!-- list group item -->
													<li class="list-group-item px-4 py-3">
														<div class="row align-items-center">
															<div class="col-2 col-md-2">
																<img src="../upload/<%= product.image %>" alt="Ecommerce" class="img-fluid" />
															</div>
															<div class="col-5 col-md-5">
																<h6 class="mb-0"><%= product.name %></h6>
																<span><small class="text-muted"><%= product.category %></small></span>
															</div>
															<% let quantity = 0; %>
															<% cartItems.forEach(cartItem => { %>
																<% if (cartItem.productId.toString() === product._id.toString()) { %>
																	<% quantity = cartItem.quantity; %>
																<% } %>
															<% }); %>
															<div class="col-2 col-md-2 text-center text-muted">
																<span><%= quantity %> 
																<small><% units.forEach(unit => { %>
																	<% if (unit._id.toString() === product.units.toString()) { %>
																		<%= unit.name?unit.name:''; %>
																	<% } %>
																<% }); %></small></span>
															</div>
															<div class="col-3 text-lg-end text-start text-md-end col-md-3">
																<span class="fw-bold">₹ <%= product.discounted_price*quantity %>/-</span>
															</div>
														</div>
													</li>
												<% }) %>
	
												<!-- list group item -->
												<li class="list-group-item px-4 py-3">
													<div class="d-flex align-items-center justify-content-between mb-2">
														<div>Item Subtotal</div>
														<div class="fw-bold">₹ <%= carttotalprice %>/-</div>
													</div>
													<div class="d-flex align-items-center justify-content-between mb-2">
														<div>
															Service Fee
															<i class="feather-icon icon-info text-muted" data-bs-toggle="tooltip" title="Platform Charges"></i>
														</div>
													<span class="fw-bold">₹ <%= fee %>/-</span>
													</div>
													<div class="d-flex align-items-center justify-content-between">
														<div>
															Delivery Change
															<i class="feather-icon icon-info text-muted" data-bs-toggle="tooltip" title="Delivery Change apply below order of 299/-"></i>
														</div>
														
													<span class="fw-bold">₹ <%= delivery_fee %>/-</span>
													</div>
												</li>
												<!-- list group item -->
												<li class="list-group-item px-4 py-3">
													<div class="d-flex align-items-center justify-content-between fw-bold">
														<div>Subtotal</div>
														<span class="fw-bold">₹ <%= (parseFloat(carttotalprice) + parseFloat(delivery_fee) + parseFloat(fee)).toFixed(2) %>/-</span>
													</div>
												</li>
											</ul>
										</div>
									</div>
								</div>
							</div>
							<form class="needs-validation" action="/order" method="post">
								<input type="hidden" name="user_id" value="<%= user._id %>">
								<input type="hidden" name="name" value="<%= user.name %>">
								<input type="hidden" name="number" value="<%= user.phone %>">
								<input type="hidden" name="email" value="<%= user.email %>">
								<input type="hidden" name="method" value="Cash on Delivery">
								<input type="hidden" name="address" value="<%= user.name %>, <%= user.address %>">
								<input type="hidden" name="total_products" value="<%= cartProductId %>">
								<input type="hidden" name="qty" value="<%= cartqty %>">
								<input type="hidden" name="total_price" value="<%= (parseFloat(carttotalprice) + parseFloat(fee)).toFixed(2) %>">
								<input type="hidden" name="placed_on" value="<%= new Date().toISOString() %>">
								<input type="hidden" name="payment_status" value="In Progress">
								
								<div class="mt-5 d-flex justify-content-end">
								  <a href="shop" class="btn btn-outline-gray-400 text-muted">Shop More</a>
								  <button type="submit" class="btn btn-primary ms-2">Place Order</button>
								</div>
							  </form>
							  
					</div>
				</div>
			</section>
