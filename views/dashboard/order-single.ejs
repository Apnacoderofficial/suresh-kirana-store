<%- include('../include/admin-header.ejs') %>
 <main class="main-content-wrapper ">
            <!-- container -->
            <div class="container">
               <!-- row -->
               <div class="row mb-8">
                  <div class="col-md-12">
                     <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-4">
                        <div>
                           <!-- page header -->
                           <h2>Order Id #<%= order._id.toString().slice(-5) %></h2>
                           <!-- breacrumb -->
                           <nav aria-label="breadcrumb">
                              <ol class="breadcrumb mb-0">
                                 <li class="breadcrumb-item"><a href="/" class="text-inherit">Home</a></li>
                                 <li class="breadcrumb-item active" aria-current="page">Order Detail <%= order._id.toString().slice(-5) %></li>
                              </ol>
                           </nav>
                        </div>
                        <!-- button -->
                        <div>
                           <a href="/dashboard/order-list" class="btn btn-primary">Back to all orders</a>
                           <a href="#" id="downloadInvoice" class="btn btn-secondary">Download Invoice</a>
                        </div>
                     </div>
                  </div>
               </div>
               <!-- row -->
               <div class="row shadow border">
                  <div class="col-xl-12 col-12 mb-5">
                     <!-- card -->
                     <div class="card h-100 card-lg" id="invoice">
                        <div class="justify-content-center text-center mt-4">
                            <img src="https://www.sureshkiranastore.in/assets/images/logo/freshcart-logo.svg" alt="Freshcart Logo">
                        </div>
                        <div class="card-body p-6">
                            <div class="d-md-flex justify-content-between">
                                <div class="d-flex align-items-center mb-2 mb-md-0">
                                    <h2 class="mb-0">Order Id #<%= order._id.toString().slice(-5) %></h2>
                                    <span class="badge bg-light-warning text-dark-warning ms-2"><%= order.pay %></span>
                                </div>
                                <div class="d-md-flex">
                                    <div class="ms-md-3"></div>
                                </div>
                            </div>
                            <div class="mt-8">
                                <div class="row">
                                    <!-- address -->
                                    <div class="col-lg-4 col-md-4 col-12">
                                        <div class="mb-6">
                                            <h6>Customer Details</h6>
                                            <p class="mb-1 lh-lg">
                                                <%= order.name %><br>
                                                <%= order.email %><br>
                                                <%= order.number %>
                                            </p>
                                        </div>
                                    </div>
                                    <!-- address -->
                                    <div class="col-lg-4 col-md-4 col-12">
                                        <div class="mb-6">
                                            <h6>Shipping Address</h6>
                                            <p class="mb-1 lh-lg">
                                                <%= order.name %><br>
                                                <%= order.address %><br>
                                                India<br>
                                                Contact No. <%= order.number %>
                                            </p>
                                        </div>
                                    </div>
                                    <!-- address -->
                                    <div class="col-lg-4 col-md-4 col-12">
                                        <div class="mb-6">
                                            <h6>Order Details</h6>
                                            <p class="mb-1 lh-lg">
                                                Order ID:
                                                <span class="text-dark">#<%= order._id.toString().slice(-5) %></span><br>
                                                Order Date:
                                                <span class="text-dark"><%= new Date(order.placed_on).toLocaleString('en-US', { day: '2-digit', month: 'short', year: 'numeric', hour: 'numeric', minute: '2-digit', hour12: true }) %></span><br>
                                                Order Total:
                                                <span class="text-dark">₹ <%= order.total_price %></span>
                                                <br />
                                          Order Status:
                                          <span class="text-dark"><%= order.payment_status %></span>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <div class="table-responsive">
                                    <!-- Table -->
                                    <table class="table mb-0 text-nowrap table-centered">
                                        <!-- Table Head -->
                                        <thead class="bg-light">
                                            <tr>
                                                <th>Products</th>
                                                <th>Price</th>
                                                <th>Quantity</th>
                                                <th>Total</th>
                                            </tr>
                                        </thead>
                                        <!-- tbody -->
                                        <tbody>
                                            <% 
                                            let totalprice = 0;
                                            productDetails.forEach(product => { %>
                                                <tr>
                                                    <!-- Product Image -->
                                                    <td>
                                                        <a href="#" class="text-inherit">
                                                            <div class="d-flex align-items-center">
                                                                <div>
                                                                    <img src="https://www.sureshkiranastore.in/upload/<%= product.image %>" alt="" class="icon-shape icon-lg">
                                                                </div>
                                                                <div class="ms-lg-4 mt-2 mt-lg-0">
                                                                    <!-- Product Name -->
                                                                    <h5 class="mb-0 h6"><%= product.name %></h5>
                                                                </div>
                                                            </div>
                                                        </a>
                                                    </td>
                                                    <!-- Product Price -->
                                                    <td><span class="text-body">₹ <%= product.price %></span></td>
                                                    <!-- Product Quantity -->
                                                    <td><%= product.quantity %></td>
                                                    <!-- Total Price (Price * Quantity) -->
                                                    <td>₹ <%= product.price %></td>
                                                </tr>
                                            <% }) %>
                                        </tbody>
                                        <tfoot>
                                            <tr>
                                                <td class="border-bottom-0 pb-0"></td>
                                                <td class="border-bottom-0 pb-0"></td>
                                                <td colspan="1" class="fw-medium text-dark">
                                                    <!-- text -->
                                                    Service Fee
                                                </td>
                                                <td class="fw-medium text-dark">
                                                    <!-- text -->
                                                    ₹  <%= order.serviceFee %>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class="border-bottom-0 pb-0"></td>
                                                <td class="border-bottom-0 pb-0"></td>
                                                <td colspan="1" class="fw-medium text-dark">
                                                    <!-- text -->
                                                    Delivery Charge
                                                </td>
                                                <td class="fw-medium text-dark">
                                                    <!-- text -->
                                                    ₹ <%= order.deliveryCharges %>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td></td>
                                                <td></td>
                                                <td colspan="1" class="fw-semibold text-dark">
                                                    <!-- text -->
                                                    Grand Total
                                                </td>
                                                <td class="fw-semibold text-dark">
                                                    <!-- text -->
                                                    ₹ <%= order.total_price %>
                                                </td>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="card-body p-6">
                            <div class="row">
                                <div class="col-md-6 mb-4 mb-lg-0">
                                    <h6>Payment Info</h6>
                                    <span><%= order.method %></span>
                                </div>
                            </div>
                        </div>
                    </div>
                  </div>
               </div>
            </div>
         </main>

         <!-- Include html2pdf.js -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.9.2/html2pdf.bundle.min.js"></script>
<script>
document.getElementById('downloadInvoice').addEventListener('click', function () {
    const element = document.getElementById('invoice');
    html2pdf(element, {
        margin: 0.5, // Smaller margin
        filename: `invoice_<%= order._id.toString().slice(-5) %>.pdf`,
        image: { type: 'jpeg', quality: 0.98 },
        html2canvas: { scale: 2 },
        jsPDF: { unit: 'in', format: 'a4', orientation: 'portrait' } // A4 size paper
    });
});
</script>

      <!-- Libs JS -->
<!-- <script src="../assets/libs/jquery/dist/jquery.min.js"></script> -->
<script src="../assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="../assets/libs/simplebar/dist/simplebar.min.js"></script>

<!-- Theme JS -->

<script src="../assets/js/theme.min.js"></script>

   </body>
</html>