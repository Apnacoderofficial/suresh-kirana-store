<%- include('../include/admin-header.ejs') %>

         <!-- main -->
         <main class="main-content-wrapper">
            <!-- container -->
            <div class="container">
               <!-- row -->
               <div class="row mb-8">
                  <div class="col-md-12">
                     <div class="d-md-flex justify-content-between align-items-center">
                        <!-- page header -->
                        <div>
                           <h2>Update Order</h2>
                           <!-- breacrumb -->
                           <nav aria-label="breadcrumb">
                              <ol class="breadcrumb mb-0">
                                 <li class="breadcrumb-item"><a href="/dashboard/index" class="text-inherit">Dashboard</a></li>
                                 <li class="breadcrumb-item"><a href="/dashboard/categories" class="text-inherit">Order</a></li>
                                 <li class="breadcrumb-item active" aria-current="page">Update Order</li>
                              </ol>
                           </nav>
                        </div>
                        <div>
                           <a href="/dashboard/categories" class="btn btn-light">Back to Categories</a>
                        </div>
                     </div>
                  </div>
               </div>
               <div class="row">
                  <div class="col-lg-12 col-12">
                     <!-- card -->
                     <div class="card mb-6 shadow border-0">
                        <!-- card body -->
                        <form action="/dashboard/editorder?id=<%= order._id %>" method="post">
							<div class="card-body p-6">
								
								<h4 class="mb-4 h5 mt-5">Order Information</h4>
	 
								<div class="row">
								   <!-- input -->
								   <div class="mb-3 col-lg-12">
									  <label class="form-label">Order Status</label>
                             <select name="paymentstatus" class="form-control" id="">
                              <option disabled>--Select Order Status--</option>
                              <option class="bg-light-warning" value="In Progress" <%= order.payment_status === 'In Progress' ? 'selected' : '' %>>In Progress</option>
                              <option class="bg-light-success" value="completed" <%= order.payment_status === 'completed' ? 'selected' : '' %>>Completed</option>
                          </select>
                          
								   </div>
								   <div></div>
								   <!-- input -->
								   
								   <div class="col-lg-12">
									  <button type="submit" class="btn btn-primary">Edit Category</button>
									  <!-- <a href="#" class="btn btn-secondary ms-2">Save</a> -->
								   </div>
								</div>
							 </div>
						</form>
                     </div>
                  </div>
               </div>
            </div>
         </main>
		 <%- include('../include/admin-footer.ejs') %>